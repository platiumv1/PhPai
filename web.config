<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <defaultDocument enabled="true">
      <files>
        <clear />
        <add value="index.php" />
      </files>
    </defaultDocument>

    <rewrite>
      <rules>

        <!-- /home -->
        <rule name="HomePrettyUrl" stopProcessing="true">
          <match url="^home/?$" />
          <action type="Rewrite" url="/ui/index.php" />
        </rule>

        <!-- /chat -->
        <rule name="ChatPrettyUrl" stopProcessing="true">
          <match url="^chat/?$" />
          <action type="Rewrite" url="/chat/chat.php" />
        </rule>

        <!-- /admin -->
        <rule name="AdminPrettyUrl" stopProcessing="true">
          <match url="^admin/?$" />
          <action type="Rewrite" url="/admin/index.php" />
        </rule>

        <!-- Ignorera riktiga filer / mappar -->
        <rule name="IgnoreExisting" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAny">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" />
          </conditions>
          <action type="None" />
        </rule>

      </rules>
    </rewrite>

  </system.webServer>
</configuration>
